include ../input/input
include ../textarea/textarea

mixin feedback-form(props)
    form.feedback-form&attributes(attributes)
        +input({
            label: 'ФИО',
            name: 'name',
            placeholder: 'ФИО',
            required: true
        }).feedback-form__input
        +input({
            label: 'Телефон',
            name: 'phone',
            type: 'tel',
            placeholder: 'Телефон',
            required: true
        }).feedback-form__input
        +input({
            label: 'Email',
            name: 'email',
            type: 'email',
            placeholder: 'Email',
            required: true
        }).feedback-form__input
        +textarea({
            label: 'Сообщение',
            name: 'message',
            placeholder: 'Сообщение',
            required: true
        })
        button.feedback-form__button Отправить
